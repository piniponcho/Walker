<div class="dog-card-category">
  <div class="dog-card-content text-center letter-font">
    <h1 style="font-family: 'Playfair Display', serif">My Dogs</h1>
    <%= link_to "Add dog", new_dog_path , class:"btn btn-gradient"%>
  </div>
</div>
<div class="container py-6">
  <h3>My Dogs</h3>
  <div class="my-3">
  </div>
    <div class="d-flex home-index-cards">
      <% @dogs.each do |dog| %>
        <div class="card mx-3 dogs-index-card" style="width: 30rem;">
        <%= link_to dog_path(dog) do %>
          <%= cl_image_tag dog.photo.key, crop: :fit , class:"card-img-top dogs-index-card-img" do %>
          <% end %>
          <h5 class="card-title card-desc"><%= dog.name %></h5>
        <% end %>
        </div>
      <% end %>
    </div>
</div>
