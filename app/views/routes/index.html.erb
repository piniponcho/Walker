 <div class="container">
  <div>
    <%= form_with url: routes_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find an Address or City" %>
      <%= submit_tag "Search", class: "btn btn-outline-dark" %>
    <% end %>
    <h1>Routes</h1>
      <% if current_user.walker_status == true %>
        <%= link_to "New route", new_route_path, class: " btn btn-outline-dark" %>
      <% end %>
      <p class="card-text">User: <%= current_user.email%></p>
  </div>

  <div class="row py-4">
    <div class="col-sm-6">


    <div class="d-flex home-index-cards">
      <% @routes.each do |route| %>
        <div class="card mx-3 routes-index-card" style="width: 30rem;">
        <%= link_to route_path(route) do %>
          <%= cl_image_tag route.photo.key, crop: :fit , class:"card-img-top routes-index-card-img" do %>
          <% end %>
          <h5 class="card-title card-desc"><%= route.name %></h5>
        <% end %>
        </div>
      <% end %>
    </div>



    <div class="col-sm-6">
      <div>
      <div style="width: 100%; height: 800px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
      </div>
    </div>
  </div>
</div>
