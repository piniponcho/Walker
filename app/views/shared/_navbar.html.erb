<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "#", class: "navbar-brand" do %>

    <% end %>
    <div class="d-flex" style="font-size: 20px">
      <%= link_to root_path, style:"text-decoration: none; color: black" do %>
        <i class="fa-thin fa-w"></i>
        <i class="fa-solid fa-paw"></i>
        <i class="fa-thin fa-l"></i>
        <i class="fa-thin fa-k"></i>
        <i class="fa-thin fa-e"></i>
        <i class="fa-thin fa-r"></i>
      <% end %>

    </div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? && current_user.walker_status == false %>
          <li class="nav-item">


          </li>
          <li class="nav-item dropdown">
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", :transformation=>[
                      {:gravity=>"face", :height=>500, :width=>500, :crop=>"crop"},
                      {:radius=>"max"},
                      {:width=>200, :crop=>"scale"}], id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
              <%= image_tag "profile.jpeg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "My dogs", dogs_path,  class: "dropdown-item" %>
              <%= link_to "My reservations", reservations_path,  class: "dropdown-item" %>
              <%= link_to "Look for routes", routes_path,  class: "dropdown-item" %>
              <%= link_to "My dashboard", profile_path(current_user.id),  class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% elsif user_signed_in? && current_user.walker_status == true %>
          <li class="nav-item dropdown">
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", :transformation=>[
                      {:gravity=>"face", :height=>500, :width=>500, :crop=>"crop"},
                      {:radius=>"max"},
                      {:width=>200, :crop=>"scale"}], id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
              <%= image_tag "profile.jpeg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "My routes", routes_path,  class: "dropdown-item" %>
              <%= link_to "My reservations", reservations_path,  class: "dropdown-item" %>
              <%= link_to "My profile", profile_path(current_user.id),  class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
